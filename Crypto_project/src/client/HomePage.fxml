<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="399.0" stylesheets="@HomePage.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.HomePageViewController">
   <children>
      <Label styleClass="encrypt_label" text="Please choose file to encrypt" />
      <HBox alignment="CENTER" prefHeight="200.0" prefWidth="461.0" VBox.vgrow="ALWAYS">
         <children>
            <TextField fx:id="filePathTextField" editable="false" focusTraversable="false" promptText="Path" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#chooseFile" styleClass="file_uploader_btn" text="Choose File">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <ProgressIndicator fx:id="spinner" prefHeight="169.0" prefWidth="389.0" progress="0.0">
         <VBox.margin>
            <Insets bottom="20.0" left="5.0" right="5.0" />
         </VBox.margin>
      </ProgressIndicator>
   </children>
</VBox>
